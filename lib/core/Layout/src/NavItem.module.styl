.nav_item {
	position: relative
	display: flex
	margin-bottom: 4px
	padding: 9px 16px
	outline: none
	border: 1px solid transparent
	border-radius: 4px
	background-color: transparent
	color: #282728
	text-decoration: none
	font-size: 16px
	line-height: 1.5
	cursor: pointer
	user-select: none
	-webkit-tap-highlight-color: transparent
	-webkit-touch-callout: none

	.nav_item_prefix {
		display: flex
		align-items: center
		padding-right: 4px
	}

	.nav_item_suffix {
		display: flex
		align-items: center
		margin-left: auto
		padding-left: 4px
	}

	+desktop() {
		transition: all .2s ease-in-out

		&:hover {
			background-color: #EEEEEE
			color: #282728
		}

		&:focus {
			outline: none
			border-color: #767576
			background-color: #EEEEEE
			box-shadow: inset 0 0 0 1px #767576
			color: #282728
		}
	}

	&:last-child {
		margin-bottom: 0
	}

	&.nav_item_active {
		border-color: #003CE8
		background-color: #0041FF
		box-shadow: none
		color: #FFFFFF
	}

	&.nav_item_exit {
		margin-top: auto
	}
}