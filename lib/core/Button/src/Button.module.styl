.root {
	display: inline-flex
	justify-content: center
	margin: 0
	padding: 0
	outline: none
	border: 1px solid
	background-color: transparent
	text-align: center
	font-family: Ubuntu, Arial, Helvetica, sans-serif
	cursor: pointer
	transition: all .15s ease-in-out

	.button_content {
		display: block
		text-align: center
	}

	.prefix {
		display: flex
		margin-right: .5rem
	}

	.suffix {
		display: flex
		margin-left: .5rem
	}

	.icon {
		display: flex
		margin-left: -.5rem
	}

	&.theme-light {
		&.view-main {
			border-color: #003CE8
			background-color: #0041FF
			color: #FFFFFF

			&:hover:not([disabled]) {
				border-color: #0036D1
				background-color: #003CE8
			}

			&:focus:not([disabled]) {
				border-color: #00248C
				background-color: #003CE8
				box-shadow: inset 0 0 0 1px #00248C
			}

			&.disabled, &:disabled {
				color: #FFFFFF
				opacity: .4
			}
		}

		&.view-secondary {
			border-color: #A1A0A1
			color: #282728

			&:hover:not([disabled]) {
				border-color: #4B4A4B
			}

			&:focus:not([disabled]) {
				border-color: #4B4A4B
				box-shadow: inset 0 0 0 1px #4B4A4B
			}

			&.disabled, &:disabled {
				color: #282728
				opacity: .24
			}
		}

		&.view-danger {
			border-color: #E8153E
			background-color: #FF1744
			color: #FFFFFF

			&:hover:not([disabled]) {
				border-color: #D22C46
				background-color: #E8153E
			}

			&:focus:not([disabled]) {
				border-color: #691623
				background-color: #E8153E
				box-shadow: inset 0 0 0 1px #691623
			}

			&.disabled, &:disabled {
				color: #FFFFFF
				opacity: .4
			}
		}

		&.view-pseudo {
			border-style: dashed
			border-color: #A1A0A1
			color: #282728

			&:hover:not([disabled]) {
				border-color: #4B4A4B
			}

			&:focus:not([disabled]) {
				border-style: solid
				border-color: #4B4A4B
				box-shadow: inset 0 0 0 1px #4B4A4B
			}

			&.disabled, &:disabled {
				color: #282728
				opacity: .24
			}
		}
	}

	&.size-s {
		padding: .25rem 1rem
		border-radius: .25rem
		font-weight: 400
		font-size: .875rem
		line-height: 1.5rem
	}

	&.size-m {
		padding: .5625rem 1.5rem
		border-radius: .25rem
		font-weight: 400
		font-size: 1rem
		line-height: 1.5rem
	}

	&.size-l {
		padding: 1rem 2rem
		border-radius: .375rem
		font-weight: 400
		font-size: 1.125rem
		line-height: 1.5rem
	}

	&.fullWidth {
		display: flex
		width: 100%
	}

	&.rounded {
		border-radius: 2rem
	}

	&.disabled, &:disabled {
		cursor: not-allowed
	}
}