.text {
	display: inline

	&.size-xs {
		font-size: .75rem
		line-height: 1.5
	}

	&.size-s {
		font-size: .875rem
		line-height: 1.5
	}

	&.size-m {
		font-size: 1rem
		line-height: 1.5
	}

	&.size-l {
		font-size: 1.125rem
		line-height: 1.5
	}

	&.size-xl {
		font-size: 1.25rem
		line-height: 1.5
	}

	&.size-xxl {
		font-size: 1.5rem
		line-height: 1.5
	}

	&.size-xxxl {
		font-size: 1.75rem
		line-height: 1.2
	}

	&.size-xxxxl {
		font-size: 2rem
		line-height: 1.2
	}

	&.weight-regular {
		font-weight: 400
	}

	&.weight-medium {
		font-weight: 500
	}

	&.weight-bold {
		font-weight: 700
	}

	&.color-red {
		color: #ED1C28
	}

	&.color-green {
		color: #00C853
	}

	&.color-grey {
		color: #8F8E8F
	}
}