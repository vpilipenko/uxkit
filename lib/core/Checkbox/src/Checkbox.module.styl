.checkbox {
	position: relative
	display: inline-flex
	align-items: flex-start
	margin: 0
	padding: 0
	outline: none
	cursor: pointer

	&.fullWidth {
		display: flex
		width: 100%
	}

	.fake_box {
		position: relative
		flex-shrink: 0
		border: 1px solid
		transition: border-color .15s ease-in-out

		.icon {
			position: absolute
		}
	}

	input {
		position: absolute
		top: 0
		left: 0
		z-index: -1
		margin: 0
		opacity: 0
	}

	&.size-s {
		&:not(.noPadding) {
			padding .625rem 0
		}
		.fake_box {
			width: 1rem
			height: 1rem
			border-radius: .25rem

			.icon {
				top: -.625rem
				left: -.25rem

				svg {
					width: 1.75rem
					height: 1.75rem
				}
			}
		}

		.label {
			margin-left: .5rem
			font-size: .875rem
			line-height: 1rem
		}
	}

	&.size-m {
		&:not(.noPadding) {
			padding .75rem 0
		}
		.fake_box {
			width: 1.25rem
			height: 1.25rem
			border-radius: .25rem

			.icon {
				top: -.625rem
				left: -.25rem

				svg {
					width: 2rem
					height: 2rem
				}
			}
		}

		.label {
			margin-left: .75rem
			font-size: 1rem
			line-height: 1.25rem
		}
	}

	&.size-l {
		&:not(.noPadding) {
			padding .9375rem 0
		}
		.fake_box {
			width: 1.5rem
			height: 1.5rem
			border-radius: .25rem

			.icon {
				top: -.75rem
				left: -.25rem

				svg {
					width: 2.5rem
					height: 2.5rem
				}
			}
		}

		.label {
			margin-left: 1rem
			font-size: 1.25rem
			line-height: 1.5rem
		}
	}

	&.theme-light {
		.fake_box {
			border-color: #CCCBCC
			background-color: transparent
		}

		.label {
			color: #282728
		}

		&:hover:not(.disabled):not(.error) .fake_box {
			border-color: #A1A0A1
		}

		&:focus:not(.disabled):not(.error) .fake_box {
			border-color: #BAB9BA
			box-shadow: inset 0 0 0 1px #BAB9BA
		}

		&.error .fake_box {
			border-color: #ED1C28
			background-color: rgba(#ED1C28, .24)
		}

		&.checked:not(.error) .fake_box {
			background-color: rgba(43, 192, 22, .32)
		}

		&.disabled {
			opacity: .4
			cursor: not-allowed
		}
	}
}