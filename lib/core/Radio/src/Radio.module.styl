.radio {
  display inline-flex
  align-items: flex-start
  cursor pointer
  &.disabled {
    opacity .24
  }
}

.input_box {
  position relative;
  display flex;
}

.native_input {
  position absolute;
  top 0
  left 0
  width: 100%;
  height: 100%;
  cursor: inherit;
  opacity 0;
  margin: 0;
  padding: 0;
  z-index: 1;
  &:hover:not(:checked):not(:disabled) {
    & + .fake_input {
      border-color: #A1A0A1
    }
  }
  &:focus:not(:checked) {
    & + .fake_input {
      border-color: #A1A0A1;
      box-shadow: inset 0 0 0 1px #A1A0A1;
    }
  }
  &:checked {
    & + .fake_input {
      background-color #95DF8A;
      border-color: #80CA75;
    }
  }
}

.fake_input {
  position relative
  display inline-flex;
  justify-content: center;
  align-items: center;
  border-radius: 100%;
  border: 1px solid #CCCBCC;
  transition: all .15s ease-in-out;
  &:after {
    display block
    width 0;
    height 0;
    content: '';
    background-color #282728
    border-radius: 100%
    transition: all .15s ease-in-out;
  }
}

.size-s {
  .input_box {
    padding .625rem
  }
  .native_input:checked + .fake_input:after {
    width .375rem
    height .375rem
  }
  .fake_input {
    width 1rem
    height 1rem
  }
  .label {
    font-size .875rem
    line-height 1.25rem
    margin-top: .5rem
  }
}

.size-m {
  .input_box {
    padding .75rem
  }
  .native_input:checked + .fake_input:after {
    width .5rem
    height .5rem
  }
  .fake_input {
    width 1.25rem
    height 1.25rem
  }
  .label {
    font-size 1rem
    line-height 1.5rem
    margin-top: .625rem
  }
}

.size-l {
  .input_box {
    padding .9375rem
  }
  .native_input:checked + .fake_input:after {
    width .625rem
    height .625rem
  }
  .fake_input {
    width 1.5rem
    height 1.5rem
  }
  .label {
    font-size 1.25rem
    line-height 1.875rem
    margin-top: .75rem
  }
}