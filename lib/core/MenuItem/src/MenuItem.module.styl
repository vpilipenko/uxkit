.menu_item {
	position: relative
	display: flex
	align-items: flex-start
	cursor: pointer

	.check {
		position: absolute
		left: .5rem
	}

	&:hover {
		background-color: #EEEEEE
	}

	&.focused {
		background-color: #DCDCDC
	}

	&.size-s {
		padding: .25rem .75rem .25rem 2.5rem
		font-size: .875rem
		line-height: 1.5rem
	}

	&.size-m {
		padding: .5rem .75rem .5rem 2.5rem
		font-size: 1rem
		line-height: 1.5rem
	}

	&.size-l {
		padding: .75rem .75rem .75rem 2.5rem
		font-size: 1.125rem
		line-height: 1.25rem
	}
}