.input_file {
	display: flex
	flex-direction: column
}

@media screen and (min-width: 1024px) {
	.input_file {
		&.inline {
			flex-direction: row
			margin-right: -.5rem
			margin-left: -.5rem

			.file_button {
				flex-shrink: 0
				margin-bottom: 0
				padding-right: .5rem
				padding-left: .5rem
				max-width: 14rem
				width: 100%
			}

			.file_list {
				flex-grow: 1
				flex-direction: row
				padding-right: .5rem
				padding-left: .5rem
			}
		}
	}
}

.file_button {
	position: relative
	display: flex
	flex-direction: column
	align-items: flex-start
	margin-bottom: 1rem

	.button {
		margin-bottom: .25rem
	}

	.hint, .error {
		font-size: .75rem
		line-height: 1.5
	}

	.hint {
		color: #A1A0A1
	}

	.error {
		color: #D50000
	}

	.input {
		position: absolute
		top: 0
		left: 0
		visibility: hidden
		width: 0
		height: 0
		border: 0
		opacity: 0
	}
}

.file_list {
	display: flex
	flex-wrap: wrap
	align-items: flex-start
}

.file {
	display: inline-flex
	align-items: center
	margin-right: .5rem
	margin-bottom: .25rem

	&:last-child {
		margin-right: 0
	}

	.details {
		display: flex
		flex-direction: column

		.name {
			color: #282728
			font-size: 1rem
			line-height: 1.3
		}

		.size {
			color: #A1A0A1
			font-size: .75rem
			line-height: 1
		}
	}
}