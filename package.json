{
  "name": "boilerplate",
  "version": "1.0.3",
  "description": "Boilerplate for various frontend projects",
  "main": "index.js",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack-dev-server --mode development --open --hot",
    "clean": "rm -rf dist && mkdir dist && rm -rf .cache && ls | grep *.html | xargs rm",
    "lint": "eslint --debug src/",
    "lint:write": "eslint --debug src/ --fix"
  },
  "keywords": [
    ""
  ],
  "author": "Vasiliy Pilipenko",
  "license": "UNLICENSED",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "yarn install"
    }
  },
  "lint-staged": {
    "*.(js|jsx)": [
      "eslint --fix",
      "git add"
    ],
    "*.styl": [
      "stylus-supremacy format *.styl -r -p .stylintrc",
      "stylint",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-decorators": "^7.7.4",
    "@babel/plugin-proposal-export-default-from": "^7.7.4",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "@material-ui/core": "^4.8.3",
    "@ok/ui": "^1.0.26",
    "autoprefixer": "^9.7.3",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-jsx-control-statements": "^4.0.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-polyfill": "^6.26.0",
    "baobab": "^2.5.3",
    "baobab-connect": "^0.1.92",
    "css-loader": "^3.4.1",
    "eslint": "^6.8.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-jsx-control-statements": "^2.2.1",
    "eslint-plugin-react": "^7.17.0",
    "file-loader": "^5.0.2",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^4.0.6",
    "lint-staged": "^9.5.0",
    "postcss-loader": "^3.0.0",
    "react-router-dom": "^5.1.2",
    "style-loader": "^1.1.2",
    "stylint": "^2.0.0",
    "stylus": "^0.54.7",
    "stylus-loader": "^3.0.2",
    "stylus-supremacy": "^2.14.0",
    "url-loader": "^3.0.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^1.7.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-supermodel": "^1.4.0"
  },
  "alias": {
    "@/ui": "@ok/ui/lib"
  }
}
